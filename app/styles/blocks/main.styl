.col
	display table-cell
	vertical-align top
	border-right 20px solid #999
	background #ddd
	&:last-child
		border-right none

.title
	padding 18px 11px
	font-size 38px
	background #eee
	border-bottom 6px solid #999

.set
	padding 19px 29px
	width 278px
	font-size 0

	&__item
		margin-bottom 10px
		&_speed
			padding-top 26px

	&__icon
		position relative
		top 6px
		display inline-block
		margin-right 26px
		width 25px
		height 25px

	&__label
		padding-right 13px
		font-size 16px

	&__input
		padding 2px 7px
		width 58px
		font-size 16px
		border none
		background transparent
		&:focus
		&:hover
			background #fff
		&:disabled
			color #000
			&:hover
				background transparent

	&__radiobox
		padding-top 11px

	&__radio
		position relative
		float left
		display block
		width 20%
		height 26px
		line-height 26px
		cursor pointer
		&:checked:before
			color #000
			background #ddd
			cursor default
		&:checked:hover:before
			background #ddd
		&:hover:before
			background #eee
		&:first-child:before
			border none
		&:before
			position absolute
			z-index 10
			display block
			width 100%
			height 100%
			font-size 16px
			text-align center
			color #000
			background #bbb
			border-left 1px solid #ddd

	#speed1:before
		content '0.5 x'
	#speed2:before
		content '1 x'
	#speed3:before
		content '2 x'
	#speed4:before
		content '4 x'
	#speed5:before
		content '8 x'

	&__btn
		display inline-block
		margin-top 42px
		margin-right 15px
		padding 5px 7px
		font-size 18px
		text-transform uppercase
		border 1px solid #aaa
		cursor pointer
		&:last-child
			margin-right 0
		&:hover
			background #eee

.field
	padding 10px 30px
	width 602px
	border-collapse separate
	border-spacing 2px

	&__cell
		background #fff
		width 25px
		height 25px

.wolf
	background #000

.hare
	background #aaa

.info
	padding 17px 19px
	width 300px
	&__active
		display block !important

	&__caption
		display inline-block
		margin-bottom 17px
		padding-left 8px
		font-size 18px
		cursor pointer

	&__group
		display inline-block
		vertical-align bottom
		margin-top 30px
		width 50%

	&__title
		font-size 38px

	&__titlecount
		text-align center
		font-size 67px

	&__count
		text-align center
		font-size 29px

	&__countcaption
		margin-bottom 4px
		text-align center
		font-size 16px
		&:last-child
			margin-bottom 0
		&_high:last-child
			margin-bottom -16px

	&__list
		display none
		padding 23px 25px 7px
		height 445px
		overflow-y scroll
		word-wrap break-word
		background #fff

	&__message
		padding-bottom 16px

.info-wrapper
	display none
	padding 0 4px
	font-size 0
	clearfix()
